{
    "name": "do",
    "displayName": "Do",
    "description": "quick and dirty automation",
    "version": "0.0.7",
    "icon": "logo.png",
    "repository": "https://github.com/dasdeck/do",
    "license": "MIT",
    "publisher": "jmanuels",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "TypeScript configuration",
            "properties": {
                "do.verbose": {
                    "type":"boolean",
                    "default":false,
                    "description": "causes Do to print errors and messages into message boxes"
                },
                "do.defaultType":{
                    "type":"string",
                    "default":"terminal",
                    "enum": [
                        "terminal",
                        "shell",
                        "task",
                        "command",
                        "eval",
                        "alert"
                    ],
                    "description": "the default action type to use on string operations"
                },
                "do.macros":{
                    "type":"object",
                    "default":{},
                    "description": "a set of predefined action to be used in other actions"
                },
                "do.onStart":{
                    "type":["object","string","array","null"],
                    "default":null,
                    "description":"an action (which also include array-actions) to run on vscode startup"

                }
            }
        },
        "commands": [{
            "command": "do",
            "title": "do"
        }]
    },
    "scripts": {
        "eslint": "eslint .",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "publish": "vsce publish && git add . && git commit -a -m 'vsce sync' && git push"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.9.0",
        "lodash": "^4.17.4",
        "sinon": "^4.0.1",
        "tslint": "^5.7.0",
        "typescript": "^2.5.3",
        "vscode": "^1.1.5"
    },
    "dependencies": {
        "async": "^2.5.0"
    }
}